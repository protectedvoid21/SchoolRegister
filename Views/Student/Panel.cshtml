@model SchoolRegister.Models.Student
@{
    Layout = "_Layout";
}

<p>@Model.Name @Model.SchoolClass.Name</p>
<hr/>
<table class="table table-bordered">
    <tr>
        <th>Subject</th>
        <th>Grades</th>
        <th>Average</th>
    </tr>
    @foreach (var studentSubject in Model.StudentSubjects) {
        <tr>
            <td>@studentSubject</td>
            <td>
                @if (studentSubject.Grades is not null) {
                    @foreach (var grade in studentSubject.Grades) {
                        @grade.GetGradeName() 
                    }
                }
            </td>
            <td>avg lol</td>
        </tr>
    }
</table>