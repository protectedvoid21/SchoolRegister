@model SchoolRegister.Models.ViewModels.CreateTeacherViewModel
@{
    Layout = "_LayoutAdmin";
}

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div class="mb-3">
        <span asp-validation-for="Surname"></span>
        <label asp-for="Surname"></label>
        <input asp-for="Surname" />
    </div>
    <input type="submit" value="Confirm" class="btn btn-info"/>
</form>