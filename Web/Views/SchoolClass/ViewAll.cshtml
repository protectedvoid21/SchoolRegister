@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Data.Models.SchoolClass>

<h2>Class list</h2>
<a class="btn btn-info mb-3" asp-action="Add">Add class</a>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Student Count</th>
        <th scope="col">Subject Count</th>
        <th scope="col">Student List</th>
        <th scope="col">Subject List</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var schoolClass in Model) {
        <tr>
            <th scope="row">@schoolClass.Name</th>
            <td>@schoolClass.StudentsList.Count</td>
            <td>@schoolClass.SchoolSubjects.Count</td>
            <td class="d-flex gap-2">
                <a class="btn btn-info flex-fill" asp-action="View" asp-route-id="@schoolClass.Id">View</a>
                <a class="btn btn-info flex-fill" asp-controller="Student" asp-action="Add" asp-route-id="@schoolClass.Id">Add student</a>
            </td>
            <td class="gap-2">
                <a class="btn btn-info w-100" asp-action="ClassSubjectView" asp-route-id="@schoolClass.Id">View</a>
            </td>
            <td class="d-flex gap-2">
                <a class="btn btn-warning flex-fill" asp-action="Edit" asp-route-id="@schoolClass.Id">Edit</a>
                <a class="btn btn-danger flex-fill" asp-action="Delete" asp-route-id="@schoolClass.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>