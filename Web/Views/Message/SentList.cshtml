@model IEnumerable<SchoolRegister.Models.Message>

<h2 class="text-center mb-4">Sent messages</h2>

<table class="table table-bordered table-hover table-sm">
    <tr>
        <th style="width: 20%">Date</th>
        <th style="width: 50%">Title</th>
        <th style="width: 20%">Receiver</th>
        <th style="width: 20%">Action</th>
    </tr>
    @foreach (var message in Model) {
        <tr>
            <td>@message.CreatedDate</td>
            <td><a href="#">@message.Title</a></td>
            <td>@message.ReceiverUser.Name @message.ReceiverUser.Surname</td>
        </tr>
    }
</table>