@using Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Data.ViewModels.Teachers.TeacherSubjectViewModel>

<h2>Class list</h2>
@foreach (var teachingModel in Model) {
    <h2>@teachingModel.SchoolClass.Name</h2>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Subject</th>
            <th>Actions</th>
        </tr>
        @foreach (var subject in teachingModel.SubjectList) {
            <tr>
                <td>@subject.Name</td>
                <td class="d-flex gap-2">
                    <a class="btn btn-info flex-fill" asp-controller="Teacher" asp-action="ViewClassSubject" asp-route-subjectId="@subject.Id" asp-route-classId="@teachingModel.SchoolClass.Id">View</a>
                </td>
            </tr>
        }
    </table>
}